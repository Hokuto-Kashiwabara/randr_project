<div class="panel panel-default">
   
   <!-- パネルヘッダ -->
   <div class="panel-heading">
      <span class="glyphicon glyphicon-search"></span>
      検索結果&nbsp;
      <span class="badge"><%= params.docs.length %></span>

      <div class="table-responsive" id="answertable">
         <table class="table table-striped table-hover" id="tableid">
            <th class="col-md-1 no-gutter"></th>
            <th class="col-md-11 no-gutter"></th>
               <tbody>
                  <!-- リスト -->
                  <% var i = 0; %>
                  <% params.docs.forEach(function(doc) { %>
                     <tr>
                        <td><%- doc.id -%></td>
                        <td><div style="height: 10em;overflow: hidden;white-space: nowrap; text-overflow: ellipsis;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 7;"><%- doc.body -%></div></td>
                        <td style="display:none"><%- doc.title -%></td>
                     </tr>
                  <% i++; %>
                  <% }) %>
               </tbody>
          </table>
   </div>

</div>